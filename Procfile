web: pip list | grep opencv; while pip uninstall -y opencv-python opencv-contrib-python; do echo "Removing opencv..."; done; pip install --force-reinstall opencv-python-headless==4.10.0.84; pip uninstall -y mediapipe || true; pip install mediapipe==0.10.14; while pip list | grep -E "opencv-python[^-]|opencv-contrib"; do pip uninstall -y opencv-python opencv-contrib-python; done; pip install --force-reinstall opencv-python-headless==4.10.0.84; streamlit run streamlit_app.py --server.port=$PORT --server.address=0.0.0.0
